---
import SectionContainer from "@components/SectionContainer.astro";
---

<SectionContainer id="PedirOnline" classname="flex items-center justify-center pt-20 md:pt-16 px-4 sm:px-8 lg:px-16">
    <div class="relative w-full max-w-xl sm:max-w-2xl lg:max-w-3xl h-auto bg-gray-800 flex flex-col items-center justify-center rounded-lg shadow-lg p-6 sm:p-8 lg:p-10">
        <div class="flex flex-col sm:flex-row items-center justify-center text-center sm:text-left space-y-4 sm:space-y-0 sm:space-x-4">
            <h1 class="text-lg sm:text-xl lg:text-2xl font-bold">Realiza tu pedido</h1>
            <div class="flex flex-col sm:flex-row sm:items-center space-y-3 sm:space-y-0 sm:space-x-3">
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Entrega a domicilio</button>
                <span class="text-lg sm:text-xl lg:text-2xl font-bold sm:mx-2">o</span>
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Recoger en tienda</button>
            </div>
        </div>
    </div>
</SectionContainer>
